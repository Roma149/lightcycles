<div class="container">
	<div class="row" style="margin-bottom:20px">
		<div class="col-xs-4">
			<strong>User</strong>
		</div>
		<div class="col-xs-2 text-center">
			<strong>Wins</strong>
		</div>
		<div class="col-xs-2 text-center">
			<strong>Losses</strong>
		</div>
		<div class="col-xs-2 text-center">
			<strong>Draws</strong>
		</div>
	</div>
	<% @users.each do |user| %>

		<div class="row">
			<div class="col-xs-4">
				<%= user.username %>
			</div>
			<div class="col-xs-2 text-center">
				<%= user.wins %>
			</div>
			<div class="col-xs-2 text-center">
				<%= user.losses %>
			</div>
			<div class="col-xs-2 text-center">
				<%= user.draws %>
			</div>
		</div>

	<% end %>
</div>